@startuml
title Стратегический план развития деятельности компании

!includeurl https://raw.githubusercontent.com/RicardoNiepel/C4-PlantUML/master/C4_Component.puml

System_Boundary(HeatingControlSystem, "Система управления домом") {
    Boundary(domain_1,"Взаимодействие с пользователем", "domain") {
        Container(C1, "Управление устройствами", "subdomain") {
            Component(T1,"Подключение устройств", "context")
            Component(T2,"Настройка конфигурации и сценария поведения устройств", "context")
        }
        Container(C2, "Мониторинг и телеметрия", "subdomain") {
            Component(T3, "Настройка уведомлений", "context")
            Component(T4, "Визуализация мониторинга", "context")
        }
    }
    Boundary(domain_2, "Контроль устройств", "domain") {
        Container(C3, "Исполнение сценария", "subdomain")
        Container(C4, "Анализ данных", "subdomain")
    }
    Boundary(domain_3, "Управление данными", "domain") {
        Container(C6, "Сбор данных", "subdomain")
        Container(C7, "Обработка данных", "subdomain")
    }
    Boundary(domain_4, "Телеметрия", "domain")
}

